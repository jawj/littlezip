{
  "name": "zipkiss",
  "version": "0.1.0",
  "description": "Extremely simple .zip file creation with no dependencies",
  "main": "index.js",
  "scripts": {
    "check": "tsc --noEmit",
    "buildCjs": "esbuild index.ts --bundle --format=cjs --minify --outfile=index.js",
    "buildEsm": "esbuild index.ts --bundle --format=esm --minify --outfile=index.mjs",
    "buildUnc": "esbuild fullSizeZip.ts --bundle --format=esm --minify --outfile=fullSizeZip.mjs",
    "build": "npm run buildCjs && npm run buildEsm && npm run buildUnc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "zip",
    "compressionstream"
  ],
  "author": "George MacKerron",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.20.1",
    "typescript": "^5.3.3"
  }
}
